<phone:PhoneApplicationPage 
    x:Class="MobileLoggerApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768" 
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="True">
    <phone:PhoneApplicationPage.Resources>
        <Style x:Key="ListBoxStyle1" TargetType="ListBox" x:Name="listStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template" x:Name="setter">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <ScrollViewer x:Name="ScrollViewer" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}" Padding="{TemplateBinding Padding}">
                            <StackPanel x:Name="stackPanel">
                                <ItemsPresenter/>
                                <Button Visibility="Collapsed"
                                x:Name="nextPageButton"
                                Click="LoadNextPage"
                                Background="Gray"
                                Width="auto" Height="72"
                                        IsEnabled="False">
                                    Next page
                                </Button>
                            </StackPanel>
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </phone:PhoneApplicationPage.Resources>


    <shell:SystemTray.ProgressIndicator>
        <shell:ProgressIndicator IsVisible="False" IsIndeterminate="True"/>
    </shell:SystemTray.ProgressIndicator>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <!--Pivot Control-->

        <controls:Pivot SelectionChanged="currentPivotItem" >

            <!--Search Pivot item-->
            <controls:PivotItem Header="Search" Margin="12,0" >
                <!--Double line list with text wrapping-->
                <Grid>
                    <StackPanel Margin="0,0,0,557">
                        <TextBox x:Name="SearchTextBox" Text="" GotFocus="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus" KeyUp="SearchTextBox_KeyUp"></TextBox>
                    </StackPanel>
                    <ListBox x:Name="SearchListBox" ItemsSource="{Binding Results}" Margin="0,78,0,0" Style="{StaticResource ListBoxStyle1}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,17" Width="432" Height="auto" Tap="searchResultItemTappedEvent">
                                    <TextBlock Text="{Binding SearchResultTitle, Mode=TwoWay}" TextWrapping="Wrap" Style="{StaticResource PhoneTextLargeStyle}" />
                                    <TextBlock Text="{Binding SearchResultSnippet, Mode=TwoWay}" TextWrapping="Wrap" Style="{StaticResource PhoneTextSubtleStyle}"/>
                                    <TextBlock Text="{Binding SearchResultLink, Mode=TwoWay}" TextWrapping="Wrap" Margin="12, 0, 12, 0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </controls:PivotItem>

            <!--Log Data Pivot item-->
            <controls:PivotItem Header="Data" >
                <!--Triple line list no text wrapping-->
                <ListBox x:Name="DataListBox" Margin="0,0,-12,0" ItemsSource="{Binding LogData}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,17">
                                <TextBlock Text="{Binding LogDataHeading, Mode=TwoWay}" TextWrapping="NoWrap" Margin="12,0,0,0" Style="{StaticResource PhoneTextLargeStyle}"/>
                                <TextBlock Text="{Binding LogDataContent, Mode=TwoWay}" TextWrapping="NoWrap" Margin="12,-6,0,0" Style="{StaticResource PhoneTextSubtleStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>

            <!--Debug send data Pivot item-->
            <controls:PivotItem Header="Debug Menu">
                <Button Name="debugButton" 
                        Width="256" Height="128" 
                        Background="#FF493737"
                        Click="debugButton_Click" >
                    Send data
                </Button>
            </controls:PivotItem>

            <!--Settings Pivot item-->
            <controls:PivotItem Header="Settings" >
                <ListBox x:Name="SettingsListBox" Margin="0,0,-12,0" ItemsSource="{Binding HandlerSettings}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <CheckBox x:Name="HandlerCheckBox" Content="{Binding HandlerName, Mode=TwoWay}" IsChecked="{Binding HandlerIsChecked, Mode=TwoWay}"
                                          Checked="HandlerCheckBox_Checked" Unchecked="HandlerCheckBox_Unchecked" HorizontalAlignment="Right" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </controls:PivotItem>

            <!--Info Pivot item-->
            <controls:PivotItem Header="Info">
                <StackPanel Margin="0,0,0,17">
                    <TextBlock x:Name="AppName"/>
                    <TextBlock x:Name="VersionInfo"/>
                    <TextBlock x:Name="ContactInfo"/>
                    <TextBlock x:Name="ContactNumber"/>
                </StackPanel>
            </controls:PivotItem>
        </controls:Pivot>
    </Grid>

</phone:PhoneApplicationPage>